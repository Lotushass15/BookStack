<div class='row'>
  
  <div class='col-xs-3'>
    <h2>User Info</h2>
    <%= render 'info', user: @user %>

    <h2>New book</h2>
    <%= render 'books/form', book: @book %>

  </div>

  <div class='col-xs-9'>
    <h2>Your Stacks</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr> 
          <th></th>
          <th>Title</th>
          <th>Contents</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to(book.user) do %>
              <%= attachment_image_tag(book.user, :user_image, :fill, 60, 60, fallback: "no-image-icon.jpg") %>
              <% end %>
            </td>
            <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
            <td><%= book.contents %></td>
          </tr>
        <% end %>
      </tbody>
   </table>
    <!--<!%= render '/books/index',books: @books %>-->
  </div>
</div>