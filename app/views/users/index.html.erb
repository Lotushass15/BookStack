<div class='row'>
  
  <div class='col-xs-3'>
    <h2>User Info</h2>
    <%= render 'info', user: current_user %>

    <h2>New book</h2>
    <%= render 'books/form', book: @book %>

  </div>
  <div class='col-xs-9'>
    <h2>Users</h2>
    <table class='table'>
      <thead>
        <tr>
          <th>Image</th>
          <th>Nickname</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag(user, :user_image, :fill, 60, 60, fallback: "no-image-icon.jpg") %></td>
            <td><%= user.nickname %></td>
            <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>